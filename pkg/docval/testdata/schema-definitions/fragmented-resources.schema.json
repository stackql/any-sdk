{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.stackql.io/any-sdk/fragmented-resources.schema.json",
  "title": "Resources fragment (resources map only)",
  "type": "object",
  "required": ["resources"],
  "properties": {
    "resources": {
      "type": "object",
      "description": "Map of resource name -> resource definition (NOT an array).",
      "minProperties": 1,
      "propertyNames": {
        "type": "string",
        "pattern": "^[A-Za-z0-9._-]+$"
      },
      "additionalProperties": {
        "type": "object",
        "required": ["id", "title", "methods"],
        "properties": {
          "description": { "type": "string" },
          "id": {
            "type": "string",
            "pattern": "^[A-Za-z0-9._-]+$"
          },
          "name": {
            "type": "string",
            "pattern": "^[A-Za-z0-9._-]+$"
          },
          "title": { "type": "string" },
          "methods": {
            "type": "object",
            "description": "Map of method name -> method metadata.",
            "minProperties": 1,
            "propertyNames": {
              "type": "string",
              "pattern": "^[A-Za-z0-9._-]+$"
            },
            "additionalProperties": {
              "type": "object",
              "description": "A method may be as small as { operation: { $ref: <path or URL> } }.",
              "required": ["operation"],
              "properties": {
                "operation": {
                  "type": "object",
                  "required": ["$ref"],
                  "properties": {
                    "$ref": {
                      "type": "string",
                      "pattern": "^[^\\s]+$",
                      "description": "Reference to an operation definition (internal, local, or remote)."
                    }
                  },
                  "additionalProperties": true
                },
                "operationId": { "type": "string" },
                "path": { "type": "string" },
                "method": {
                  "type": "string",
                  "enum": ["GET", "POST", "PUT", "PATCH", "DELETE", "HEAD", "OPTIONS"]
                },
                "auth": { "type": "object" },
                "primaryIdentifier": {
                  "type": "array",
                  "items": { "type": "string" }
                },
                "output": { "type": "object" },
                "scope": { "type": "string" },
                "evidence": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["source", "locator"],
                    "properties": {
                      "source": { "type": "string" },
                      "locator": { "type": "string" },
                      "quote": { "type": "string" }
                    },
                    "additionalProperties": true
                  }
                }
              },
              "additionalProperties": true
            }
          },
          "sqlVerbs": {
            "type": "object",
            "description": "SQL verb routing â€” each verb is an ordered array of $ref entries (ascending selectivity).",
            "properties": {
              "select":  { "$ref": "#/$defs/verbRefArray" },
              "insert":  { "$ref": "#/$defs/verbRefArray" },
              "update":  { "$ref": "#/$defs/verbRefArray" },
              "delete":  { "$ref": "#/$defs/verbRefArray" },
              "replace": { "$ref": "#/$defs/verbRefArray" }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": true
      }
    },
    "info": {
      "type": "object",
      "description": "Optional metadata block for the fragment file.",
      "additionalProperties": true
    }
  },
  "$defs": {
    "verbRefArray": {
      "type": "array",
      "description": "Array of $ref pointers to methods (internal, local file, or remote).",
      "items": {
        "type": "object",
        "required": ["$ref"],
        "properties": {
          "$ref": {
            "type": "string",
            "pattern": "^[^\\s]+$",
            "description": "Reference (internal JSON Pointer, local path, or remote URL)."
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": true
}
